@model SupplyTrackerMVC.Application.ViewModels.SenderVm.SenderDetailsVm

@{
    ViewData["Title"] = "View Sender Details";
}

<div class="container my-4">
    <h1 class="mb-4">Sender Company Information</h1>

    <section class="mb-4">
        <h2 class="mb-2">Main Information</h2>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
    </section>

    <section class="mb-4">
        <h2 class="mb-2">Address Information</h2>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Address.Street)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address.Street)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Address.ZIP)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address.ZIP)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Address.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address.City)
            </dd>
        </dl>
    </section>

    <section class="mb-4">
        <h2 class="mb-2">Available Contacts</h2>
        <hr />
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Role</th>
                    <th>Contact Type Count</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contact in Model.Contacts)
                {
                    <tr>
                        <td>@contact.FirstName</td>
                        <td>@contact.LastName</td>
                        <td>@contact.Role</td>
                        <td>@contact.ContactDetails.Count</td>
                        <td>
                            <a asp-controller="Contact"
                               asp-action="ViewContact"
                               asp-route-contactId="@contact.Id"
                               class="btn btn-primary">
                                Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>

    <div class="mt-4">
        <a asp-controller="Sender"
           asp-action="UpdateSender"
           asp-route-senderId="@Model.Id"
           class="btn btn-warning me-2">
            Edit
        </a>
        <a asp-action="ViewSenderList" class="btn btn-secondary">
            Back to List
        </a>
    </div>
</div>
