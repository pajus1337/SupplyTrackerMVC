@model SupplyTrackerMVC.Application.ViewModels.SenderVm.ListSenderForListVm

@{
    ViewData["Title"] = "Senders";
}

<div class="container">
    @await Html.PartialAsync("_MessagesPartial")
    <h1 class="my-4">Senders</h1>

    <div class="mb-3">
        <a asp-action="AddSender" class="btn btn-success">Create New</a>
    </div>

    <form asp-action="ViewSenderList" asp-controller="Sender" method="post">
        <div class="row mb-3">
            <div class="col-md-4">
                <div class="input-group">
                    <input type="text" asp-for="SearchString" name="searchString" id="searchString" class="form-control" placeholder="Search..." />
                    <button type="submit" class="btn btn-primary">Find</button>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Senders)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>
                                    @Html.ActionLink("Edit", "UpdateSender", new { senderId = item.Id }) |
                                    @Html.ActionLink("Details", "ViewSender", new { senderId = item.Id }) |
                                    @Html.ActionLink("Delete", "DeleteSender", new { senderId = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <ul class="pagination">
                    @for (double i = 1; i <= Math.Ceiling(Model.Count / (double)Model.PageSize); i++)
                    {
                        var isActive = (i == Model.CurrentPage) ? "active" : "";
                        <li class="page-item @isActive">
                            @if (i != Model.CurrentPage)
                            {
                                <a class="page-link" href="javascript:PagerClick(@i)">@i</a>
                            }
                            else
                            {
                                <span class="page-link">@i</span>
                            }
                        </li>
                    }
                </ul>
            </div>
        </div>
        <input type="hidden" name="pageNo" id="pageNo" />
        <input type="hidden" name="pageSize" id="pageSize" value="5" />
    </form>
</div>

@section Scripts
{
    <script type="text/javascript">
        function PagerClick(index) {
            document.getElementById("pageNo").value = index;
            document.forms[0].submit();
        }
    </script>
}
