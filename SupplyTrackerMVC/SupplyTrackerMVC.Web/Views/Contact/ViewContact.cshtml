@model SupplyTrackerMVC.Application.ViewModels.Common.ContactVm

@{
    ViewData["Title"] = "Person Contact Information";
}

<h1>Person Contact Information</h1>
<br />
<section>
    <h2>Personal Information :</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Full Name:
        </dt>
        <dd class="col-sm-10">
            @($"{Model.FirstName} {Model.LastName}")
        </dd>
        <dt class="col-sm-2">
            Position:
        </dt>
        <dd class="col-sm-10">
            @Model.Role
        </dd>
    </dl>
</section>
<section>
    <hr class="styled-hr" />
    <h2 class="section-title">Available Contact Types :</h2>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Contact Type</th>
                <th>Value</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contactDetail in Model.ContactDetails)
            {
                <tr>
                    <td>@contactDetail.ContactDetailTypeName</td>
                    <td>@contactDetail.ContactDetailValue</td>

                    <td>
                        <a asp-controller="Contact" asp-action="UpdateContactDetail" asp-route-contactDetailId="@contactDetail.Id" class="btn btn-primary">Edit</a>
                        <a asp-controller="" asp-action="" asp-route-id="" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="" asp-action="" asp-route-id="" class="btn btn-success">Add more Contact Types for this Person</a>
    <hr />
</section>

<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
