@model SupplyTrackerMVC.Application.ViewModels.DeliveryVm.DeliveryDetailsVm

@{
    ViewData["Title"] = "Delivery Details";
}

<div class="container my-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="card shadow-sm mb-4">
        <div class="card-header">
            Delivery Information
        </div>

        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Id)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.Id)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.DeliveryDataTime)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.DeliveryDataTime)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.SenderId)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.SenderId)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.SenderName)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.SenderName)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.ReceiverId)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.ReceiverId)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.ReceiverName)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.ReceiverName)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.ReceiverBranchName)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.ReceiverBranchName)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.ProductID)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.ProductID)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.ProductName)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.ProductName)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.ProductDeliveryWeight)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.ProductDeliveryWeight)</dd>
            </dl>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="GetDeliveriesList" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
