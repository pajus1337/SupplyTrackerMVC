@model SupplyTrackerMVC.Application.ViewModels.ReceiverVm.ReceiverForDeleteVm

@{
    ViewData["Title"] = "Receiver Deletion Confirmation";
}

<div class="container my-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="alert alert-warning" role="alert">
        <strong>Are you sure you want to delete this receiver?</strong>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header">
            Details of the Receiver to be Deleted
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Id)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <form asp-action="DeleteReceiver" method="post" class="mb-0">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>

            <a asp-action="ViewReceiverList" class="btn btn-secondary">
                Back to List
            </a>
        </div>
    </div>
</div>
