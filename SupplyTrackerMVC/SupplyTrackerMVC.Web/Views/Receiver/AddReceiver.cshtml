@model SupplyTrackerMVC.Application.ViewModels.ReceiverVm.NewReceiverVm

@{
    ViewData["Title"] = "Add New Receiver";
}

<div class="container my-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>
    <h4 class="mb-3">Enter Receiver Details:</h4>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddReceiver" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Address.Id" />

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address.Street" class="control-label"></label>
                    <input asp-for="Address.Street" class="form-control" />
                    <span asp-validation-for="Address.Street" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address.City" class="control-label"></label>
                    <input asp-for="Address.City" class="form-control" />
                    <span asp-validation-for="Address.City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address.ZIP" class="control-label"></label>
                    <input asp-for="Address.ZIP" class="form-control" />
                    <span asp-validation-for="Address.ZIP" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address.Country" class="control-label"></label>
                    <input asp-for="Address.Country" class="form-control" />
                    <span asp-validation-for="Address.Country" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-3">
                    <a asp-action="ViewReceiverList" class="btn btn-secondary">
                        Back to List
                    </a>

                    <button type="submit" class="btn btn-primary">
                        Create
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
