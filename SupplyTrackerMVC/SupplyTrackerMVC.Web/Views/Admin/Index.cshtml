@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container my-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-header">
                    Manage Receivers
                </div>
                <div class="card-body">
                    <p class="card-text">View or modify receivers.</p>
                    <button class="btn btn-primary"
                            onclick="location.href='@Url.Action("ViewReceiverList", "Receiver")'">
                        Manage Receivers
                    </button>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-header">
                    Manage Senders
                </div>
                <div class="card-body">
                    <p class="card-text">View or modify senders.</p>
                    <button class="btn btn-primary"
                            onclick="location.href='@Url.Action("ViewSenderList", "Sender")'">
                        Manage Senders
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-header">
                    Manage Products
                </div>
                <div class="card-body">
                    <p class="card-text">View or modify products and product types.</p>
                    <button class="btn btn-primary me-2"
                            onclick="location.href='@Url.Action("ViewProductList", "Product")'">
                        Manage Products
                    </button>
                    <button class="btn btn-secondary"
                            onclick="location.href='@Url.Action("ProductTypesList", "Product")'">
                        Manage Product Types
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-header">
                    Manage Contact Types
                </div>
                <div class="card-body">
                    <p class="card-text">View or modify contact types.</p>
                    <button class="btn btn-primary"
                            onclick="location.href='@Url.Action("ViewContactTypesList", "Contact")'">
                        Manage Contact Types
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-header">
                    Manage Users
                </div>
                <div class="card-body">
                    <p class="card-text">View or modify user accounts.</p>
                    <!-- TODO: Add URL ACTION  -->
                    <button class="btn btn-primary"
                            onclick="location.href='@Url.Action("Index", "UserAdmin")'">
                        Manage Users
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
