@model SupplyTrackerMVC.Application.ViewModels.UserVm.UserDetailsVm

@{
    ViewData["Title"] = "View User Details";
}

<div class="container my-4">
    <h1 class="mb-4">User Details</h1>

    <form asp-action="UpdateUser" asp-controller="User" method="post">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <!-- MAIN INFORMATION -->
        <section class="mb-4">
            <h2 class="mb-2">Main Information</h2>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.UserName)
                </dt>
                <dd class="col-sm-10">
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </dd>
            </dl>
        </section>

        <!-- ROLES & STATUS -->
        <section class="mb-4">
            <h2 class="mb-2">Roles & Status</h2>
            <hr />

            <div class="row mb-3">
                <div class="col-sm-2">
                    <label class="col-form-label">Current Roles</label>
                </div>
                <div class="col-sm-10">
                    @if (Model.Roles != null && Model.Roles.Count > 0)
                    {
                        @foreach (var role in Model.Roles)
                        {
                            <span class="badge bg-primary me-1">@role</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">No roles assigned</span>
                    }
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-2">
                    <label class="col-form-label">Change Roles</label>
                </div>
                <div class="col-sm-10">
                    <!-- Multi-select – Roles property (List<string>) zbierze zaznaczone role -->
                    <select asp-for="Roles"
                            class="form-select"
                            multiple
                            asp-items="ViewBag.AllRoles">
                    </select>
                    <small class="form-text text-muted">
                        Hold Ctrl (Cmd na Mac) aby zaznaczyć wiele ról.
                    </small>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-2">
                    <label class="col-form-label">Active</label>
                </div>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                        <label class="form-check-label" asp-for="IsActive">
                            @Html.DisplayNameFor(m => m.IsActive)
                        </label>
                    </div>
                </div>
            </div>
        </section>

        <!-- ACTION BUTTONS -->
        <div class="mt-4">
            <button type="submit" class="btn btn-primary me-2">
                Save Changes
            </button>
            <a asp-controller="User"
               asp-action="ListUsers"
               class="btn btn-secondary">
                Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
