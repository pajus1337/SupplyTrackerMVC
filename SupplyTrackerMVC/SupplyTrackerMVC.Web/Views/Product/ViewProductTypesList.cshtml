@model SupplyTrackerMVC.Application.ViewModels.ProductVm.ListProductTypeForListVm

@{
    ViewData["Title"] = "List Of Product Types";
}

<div class="container my-4">
    <h1 class="mb-4">Product Types</h1>

    <div class="mb-3">
        <a asp-controller="Product" asp-action="AddProductType" class="btn btn-success">Create New</a>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Type</th>
                        <th>ADR</th>
                        <th>Packaged</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ProductTypes)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.PhysicalState)</td>
                            <td>@Html.DisplayFor(modelItem => item.IsADRProduct)</td>
                            <td>@Html.DisplayFor(ModelItem => item.IsPackaged)</td>
                            <td>
                                @Html.ActionLink("Edit", "UpdateProductType", new { productTypeId = item.Id }) |
                                @Html.ActionLink("Details", "ViewProductType", new { productTypeId = item.Id }) |
                                @Html.ActionLink("Delete", "DeleteProductType", new { productTypeId = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
