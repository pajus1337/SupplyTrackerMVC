@model SupplyTrackerMVC.Application.ViewModels.ProductVm.NewProductTypeVm

@{
    ViewData["Title"] = "Add New Product Type";
}

<h1>Add new product Type:</h1>

<h4>Entry product type details:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NewProductType">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="PhysicalState" class="control-label"></label>
                <input asp-for="PhysicalState" class="form-control" />
                <span asp-validation-for="PhysicalState" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsADRProduct" /> @Html.DisplayNameFor(model => model.IsADRProduct)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
