@model SupplyTrackerMVC.Application.ViewModels.ProductVm.ProductTypeVm

@{
    ViewData["Title"] = "Product Type";
}

<div class="container my-4">
    @await Html.PartialAsync("_MessagesPartial")
    <h1 class="mb-4">Product Type</h1>

    <h4 class="mb-3">Details:</h4>
    <hr />

    <dl class="row mb-4">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhysicalState)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhysicalState)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsADRProduct)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsADRProduct)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsPackaged)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsPackaged)
        </dd>
    </dl>

    <div class="mb-3">
        <a asp-controller="Product" asp-action="UpdateProductType" asp-route-productTypeId="@Model.Id" class="btn btn-primary me-2">Edit</a>
        <a asp-controller="Product" asp-action="ViewProductTypesList" class="btn btn-secondary">Back to List</a>
    </div>
</div>
